#include <iostream>
using namespace std;
bool isPalindrome(char* str, int start, int end) {
    if (start >= end)
        return true;
    if (str[start] != str[end])
        return false;
    return isPalindrome(str, start + 1, end - 1);
}
int main() {
    char str[100];
    cout << "Enter a string: ";
    cin >> str;
    if (isPalindrome(str, 0, strlen(str) - 1))
        cout << str << " is a palindrome.";
    else
        cout << str << " is not a palindrome.";
    return 0;
}
