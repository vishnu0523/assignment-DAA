#include <iostream>
using namespace std;
int findLargest(int arr[], int n) {
    if (n == 1)
        return arr[0];
    return max(arr[n-1], findLargest(arr, n-1));
}
int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;
    int arr[n];
    cout << "Enter elements: ";
    for (int i = 0; i < n; i++)
        cin >> arr[i];
    cout << "Largest element: " << findLargest(arr, n);
    return 0;
}
