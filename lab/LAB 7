#include <iostream>
using namespace std;
void reverseStr(char* str, int start, int end) {
    if (start >= end)
        return;
    swap(str[start], str[end]);
    reverseStr(str, start + 1, end - 1);
}
int main() {
    char str[100];
    cout << "Enter a string: ";
    cin >> str;
    reverseStr(str, 0, strlen(str) - 1);
    cout << "Reversed string: " << str;
    return 0;
}
