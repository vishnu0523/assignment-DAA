#include <iostream>
using namespace std;
bool isPrime(int num, int i) {
    if (num <= 2)
        return (num == 2) ? true : false;
    if (num % i == 0)
        return false;
    if (i * i > num)
        return true;
    return isPrime(num, i + 1);
}
int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;
    if (isPrime(num, 2))
        cout << num << " is a prime number.";
    else
        cout << num << " is not a prime number.";
    return 0;
}
