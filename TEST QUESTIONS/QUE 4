def wiggleSort(nums):
  
    nums.sort()
    n = len(nums)
    result = [0] * n
    left = (n + 1) // 2 - 1  
    right = n - 1  
    
    for i in range(0, n, 2):
        result[i] = nums[left]
        left -= 1
    
    for i in range(1, n, 2):
        result[i] = nums[right]
        right -= 1
    
    return result
nums1 = [1, 5, 1, 1, 6, 4]
nums2 = [1, 3, 2, 2, 3, 1]

print(wiggleSort(nums1))
print(wiggleSort(nums2))
